{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@packages/tsconfig/tsconfig.base.json",
	"files": ["src/index.ts"],
	"compilerOptions": {
		"module": "es2022",
		"moduleResolution": "Node",
		"lib": ["ES2023", "DOM"],
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["**/*.ts"]
}
